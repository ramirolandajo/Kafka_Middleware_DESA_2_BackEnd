{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Event",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": { "type": "string", "minLength": 1 },
    "payload": {
      "oneOf": [
        { "type": "object" },
        { "type": "string" }
      ]
    },
    "timestamp": {
      "oneOf": [
        { "type": "string", "format": "date-time" },
        { "type": "number" }
      ]
    },
    "originModule": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": true
}
